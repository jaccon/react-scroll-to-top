#scroll-to-top
    position: fixed
    bottom: 20px
    right: 20px

    button
        background: rgba(0, 0, 0, 0.6)
        width: 50px
        height: 50px
        text-decoration: none
        border-radius: 35px
        display: flex
        justify-content: center
        align-items: center
        opacity: 0
        transition: all 0.3s linear
        z-index: 1000
        border: 0
        cursor: pointer

        i.icon-arrow
            color: #fff
            display: block
            position: relative
            top: 0
            transition: all 0.3s ease

            &::before
                content: ""
                position: absolute
                left: -6px
                top: -3px
                width: 12px
                height: 12px
                border-top: 2px solid currentColor
                border-right: 2px solid currentColor
                -webkit-font-smoothing: antialiased
                transform: rotate(-45deg)

        &:hover,
        &:focus
            background: rgba(0, 0, 0, 0.7)

        &:active
            background: rgba(0, 0, 0, 0.9)

            i.icon-arrow
                top: 6px

    &.shown
        button
            opacity: 1
